{
    "name": "yt-man",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Extension for time based skips with media keys on YouTube",
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_title": "yt-man",
      "default_popup": "popup.html"
    },
    "default_locale": "en",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "storage" 
    ],
    "host_permissions": [
      "https://www.youtube.com/watch?v=*"      
    ],
    "content_security_policy": {
      "default-src": "self"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/watch?v=*"
        ],
        "js": [
          "content.js"
        ]
      }
    ]
  }
  
